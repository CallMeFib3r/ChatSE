<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/single_margin"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/double_margin"
        android:layout_height="@dimen/double_margin"
        android:contentDescription="@string/avatar" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/single_margin"
        android:layout_marginStart="@dimen/single_margin"
        tools:text="AdamMc331" />

</LinearLayout>